<div id="image_container">

  <div id="image_form">
    <form action="/images" method="get" class="offset9 form-search">
      <input placeholder="Search an image..." type="text" name="input_image" class="input-medium search-query">
      <button type="submit" class="btn">Search</button>
    </form>
  </div>

  <div id="img_size">
    <%  if !params["input_image"].nil? %>
    <img src='<%= @image %>' />
    <%  end %>
  </div>
</div>



